	<insert id="insertFavorite" parameterType="map">
		INSERT INTO `favorite`
 		(
 			`name`
 			,`url`
 			,`createdAt`
 			,`updatedAt`
 		)
 		VALUES
 		(
 			#{name}
 			, #{url}
 			, NOW()
 			, NOW()
 		)
	</insert>
	
	<select id="selectFavList" resultType="com.quiz.lesson06.model.Favorite">
		SELECT
 			*
 		FROM
 			`favorite`
	</select>
	
	<select id="existingUrl" parameterType="string" resultType="boolean">
		SELECT
 			COUNT(1)
		FROM
			`favorite`
		WHERE 
			`url` = #{url}
	</select>
</mapper>