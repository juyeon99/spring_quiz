<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.quiz.lesson03.dao.RealEstateDAO">		<!-- namespace: 어떤 interface에 mapping 되는지 -->
 	<select id="selectRealEstateById" parameterType="int" resultType="com.quiz.lesson03.model.RealEstate">		<!-- resultType: 어느 모델에 데이터를 담을 것인지 -->
 		SELECT
 			`id`
			,`realtorId`
			,`address`
			,`area`
			,`type`
			,`price`
			,`rentPrice`
			,`createdAt`
			,`updatedAt`
 		FROM
 			`real_estate`
 		WHERE
 			`id` = #{id}		<!-- @Param의 키 이름 -->
 	</select>
 	
 	<select id="selectRealEstateByRentPrice" parameterType="int" resultType="com.quiz.lesson03.model.RealEstate">
 		SELECT
 			`id`
			,`realtorId`
			,`address`
			,`area`
			,`type`
			,`price`
			,`rentPrice`
			,`createdAt`
			,`updatedAt`
 		FROM
 			`real_estate`
 		WHERE
 			<![CDATA[
        	`rentPrice` < #{rent_price}
        	]]>
 	</select>
 	
 	<select id="selectRealEstateByAreaAndPrice" parameterType="map" resultType="com.quiz.lesson03.model.RealEstate">
 		SELECT
 			`id`
			,`realtorId`
			,`address`
			,`area`
			,`type`
			,`price`
			,`rentPrice`
			,`createdAt`
			,`updatedAt`
 		FROM
 			`real_estate`
 		WHERE
 			<![CDATA[
        	`area` >= #{area}
        	]]>
        AND
        	<![CDATA[
        	`price` <= #{price}
        	]]>
        AND
        	`type` = "매매"
        ORDER BY
        	`createdAt`
        DESC
 	</select>
 	
 	<insert id="insertRealEstate" parameterType="com.quiz.lesson03.model.RealEstate">
 		INSERT INTO `real_estate`
 		(
 			`realtorId`
			,`address`
			,`area`
			,`type`
			,`price`
			,`createdAt`
			,`updatedAt`
 		)
 		VALUES
 		(
 			#{realtorId}
 			,#{address}
 			,#{area}
 			,#{type}
 			,#{price}
 			, NOW()
 			, NOW()
 		)
 	</insert>
 	
 	<insert id="insertRealEstateAsField" parameterType="map">
 		INSERT INTO `real_estate`
 		(
 			`realtorId`
			,`address`
			,`area`
			,`type`
			,`price`
			,`rentPrice`
			,`createdAt`
			,`updatedAt`
 		)
 		VALUES
 		(
 			#{realtorId}
 			,#{address}
 			,#{area}
 			,#{type}
 			,#{price}
 			,#{rentPrice}
 			, NOW()
 			, NOW()
 		)
 	</insert>
 	
 	<update id="updateRealEstateById" parameterType="map">
 		UPDATE `real_estate`
 		SET
 			`price` = #{price}
 			,`updatedAt` = NOW()
 		WHERE
 			`id` = #{id}
 	</update>
 	
 	<delete id="deleteRealEstateById" parameterType="int">
	    DELETE
	    FROM `real_estate`
	    WHERE
	        `id` = #{id}
	</delete>
 </mapper>